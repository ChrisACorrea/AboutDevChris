@inherits LayoutComponentBase

<MudThemingProvider IsDarkMode/>
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudImage Src="images/dev_chris_logo.svg" Alt="Dev Chris Logo" Height="30"></MudImage>
        <MudSpacer />
        <MudStack Row Spacing="2" AlignItems="AlignItems.Center">
            <MudLink Href="https://github.com/ChrisACorrea" Target="_blank" rel="noreferrer">
                <MudIcon Icon="@Icons.Custom.Brands.GitHub"></MudIcon>
            </MudLink>
            <MudLink Href="https://www.linkedin.com/in/chrisacorrea/" Target="_blank" rel="noreferrer">
                <MudIcon Icon="@Icons.Custom.Brands.LinkedIn" Style="font-size: 1.75rem;"></MudIcon>
            </MudLink>
        </MudStack>
    </MudAppBar>

    <MudMainContent>
        <MudContainer>
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>